<div class="col-sm-12 col-md-4 col-lg-4 mb-2">
    <div class="card m-1">
        <div class="card-body skill-card-body">
            <div class="card-title skill-head mb-2">
                <img class="p-1 mr-2 d-inline"
                     src="assets/images/skills/{{skill.img}}"
                     height="50">
                <h4 class="card-title d-inline">{{skill.name}}</h4>
            </div>
            <div class="progress">
                <div class="progress-bar skill-progress-bar" role="progressbar"
                    style="width: {{mul skill.level 10}}%"
                    aria-valuemin="0" aria-valuemax="100">
                </div>
            </div>
            <p class="skill-extra-info text-right text-muted mt-1">{{skill.level}} / 10</p>
        </div>
    </div>
</div>
